@model IEnumerable<RugratsWebApp.Models.AccountModel>

@{
    ViewBag.Title = "List";
}
    <div class="col-xs-12">

        <h2>Account List</h2>

        <div class="box">
            <div class="box-header">

                <div class="box-tools">
                    <div class="input-group input-group-sm hidden-xs" style="width: 150px;">    
                        <form action="/Account/CreateAsync" method="get">
                            <button type="submit" class="btn btn-block btn-success">New Account</button>
                        </form>
                        
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>
                                Account No
                            </th>
                            <th>
                                Balance
                            </th>
                            <th>
                                Blockage Amount
                            </th>
                            <th>
                                Net Balance
                            </th>
                            <th>
                                Opening Date
                            </th>
                            <th>
                                Last Transaction Date
                            </th>
                            <th></th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.accountNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.balance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.blockageAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.netBalance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.openingDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.lastTransactionDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.status)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
